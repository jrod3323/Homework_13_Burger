<h1 class="center-align">🍔Eat The Burgers App🍔!</h1>

<main class="main row">
  <div class= "col m6">
    <h2 class="center-align">Burgers To Devour!</h2>

    <ul class="collection">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col m6">
    <h2 class="center-align">Devoured Burgers!</h2>

    <ul class="collection">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</main>

<div class="row add-burger center-align">
  <div class="col s12 m6 offset-m3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Add A New Burger</span>
        <form class="create-form">
          <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name" placeholder="Your Burger Name">
          </div>
          <button type="submit">Add Burger</button>
        </form>
      </div>
    </div>
  </div>
</div>

